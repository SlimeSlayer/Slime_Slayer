<!-- Config file for the game -->

<config>
  
  <app framerate_cap="">
    <title>RogueScroll</title>
    <organization>Vifa</organization>

  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <font>
    <default_font file="fonts/open_sans/OpenSans-Regular.ttf" size="12"/>
  </font>

  <gui>
    <atlas file="gui/atlas.png"       id="atlas"/>
    <atlas file="gui/atlas_test.png"  id="atlas_test"/>
  </gui>

  <audio>
    <audio_data file ="audio/audio_data.xml"/>
  </audio>
  
  <window>
    <resolution width="1600" height="1024" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
  </window>

  <input_manager>
    <!--Debug-->
    <key id ="F1"  event="colliders_debug"/>
    <key id ="F2"  event="ui_debug"/>
    <!--Volume UP/DOWN-->
    <key id ="Keypad +"  event="volume_up"/>
    <key id ="Keypad -"  event="volume_down"/>
    <!--Escape-->
    <key id ="Escape" event ="escape"/>   
    <!--Full Screen-->
    <key id ="F"  event ="full_screen"/>
    <!--Player-->
    <key id ="A"  event ="go_left"/>
    <key id ="D"  event ="go_right"/>
    <key id ="W"  event ="jump"/>
    <key id ="S"  event ="crouch"/>
  </input_manager>
  
  <file_system>
    <path>data</path>
  </file_system>

  <scene>
  
  </scene>

  <animator>
    
  </animator>

  <entities_manager>
    <entities_data file="entities_manager/entities_defs.xml"/>
  </entities_manager>
  
</config>