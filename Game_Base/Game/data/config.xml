<!-- Config file for the game -->

<config>
  
  <app framerate_cap="">
    <title>RogueScroll</title>
    <organization>Vifa</organization>

  </app>
	
  <renderer>
    <vsync value="false"/>
  </renderer>

  <fonts>
    <default_font file="fonts/open_sans/OpenSans-Regular.ttf" size="12" id="def_font" r="255" g="255" b="255" a="255"/>
    <font file="fonts/open_sans/OpenSans-Regular.ttf" size="14" id="dialog_font" r="255" g="255" b="255" a="255"/>
    <font file="fonts/open_sans/OpenSans-Regular.ttf" size="26" id="ally_hitpoints_font" r="255" g="0" b="50" a="255"/>
    <font file="fonts/open_sans/OpenSans-Regular.ttf" size="26" id="enemy_hitpoints_font" r="255" g="255" b="225" a="255"/>
    <font file="fonts/open_sans/OpenSans-Regular.ttf" size="26" id="experience_font" r="155" g="255" b="255" a="255"/>
    <font file="fonts/open_sans/OpenSans-Regular.ttf" size="40" id="lvl_up_font" r="55" g="255" b="25" a="255"/>
  </fonts>

  <gui>
    <atlas file="gui/atlas.png"       id="atlas"/>
    <atlas file="gui/atlas_test.png"  id="atlas_test"/>
  </gui>

  <audio>
    <audio_data file ="audio/audio_data.xml"/>
  </audio>
  
  <window>
    <resolution width="1600" height="1024" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
  </window>

  <input_manager>
    <!--Debug-->
    <key id ="F1"  event="colliders_debug"/>
    <key id ="F2"  event="ui_debug"/>
    <!--Escape-->
    <key id ="Escape" event ="escape"/>   
    <!--Player-->
    <key id ="A"  event ="go_left"/>
    <key id ="D"  event ="go_right"/>
    <key id ="W"  event ="jump"/>
    <key id ="S"  event ="crouch"/>
    <key id ="F"  event ="interact"/>
    <key id ="L"  event ="attack"/>
    <key  controller_id="idk_bro" event="go_left"/>
    <key  controller_id="A"       event="jump"/>
    <key  controller_id="X"       event="interact"/>
    <key  controller_id="B"       event="attack"/>
    <key  controller_id="Start"   event="escape"/>
    <!--...-->
  </input_manager>
  
  <file_system>
    <path>data</path>
  </file_system>

  <animator>
    
  </animator>

  <entities_manager>
    <entities_data file="entities_manager/entities_defs.xml"/>
  </entities_manager>

  <tutorial>
    <data_folder>scenes/tutorial.xml</data_folder>
  </tutorial>

  <endless>
    <data_folder>scenes/endless.xml</data_folder>
  </endless>
</config>